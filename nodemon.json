{
  "watch": ["src"],
  "ext": "ts,json,env",
  "ignore": ["dist", "node_modules", ".git", "*.test.ts"],
  "exec": "ts-node -r tsconfig-paths/register src/server.ts",
  "env": {
    "NODE_ENV": "development",
    "TS_NODE_TRANSPILE_ONLY": "true",
    "TS_NODE_FILES": "true"
  },
  "verbose": true
}
