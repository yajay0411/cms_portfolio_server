  "scripts": {
    "dev": "dotenvx run --env-file .env.development -- nodemon",
    "dev:log": "LOGGER=true dotenvx run --env-file .env.development -- nodemon",
    "dev:debug": "LOGGER=true NODE_OPTIONS='--inspect --trace-warnings' DEBUG=express:*,mongoose:* dotenvx run --env-file .env.development -- nodemon",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "preview": "pnpm run build && LOGGER=true dotenvx run --env-file .env.production -- node dist/server.js",
    "start:dev": "pm2 start ecosystem.config.js --env development",
    "start:prod": "pm2 start ecosystem.config.js --env production",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier . --check",
    "format:fix": "prettier --write .",
    "type-check": "tsc --noEmit",
    "prepare": "husky",
    "clean": "rm -rf dist logs",
    "clean:all": "rm -rf dist logs node_modules"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix",
      "npm run format:fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
