  "scripts": {
    "dev": "dotenvx run --env-file .env.development -- nodemon",
    "dev:log": "LOGGER=true dotenvx run --env-file .env.development -- nodemon",
    "dev:debug": "LOGGER=true NODE_OPTIONS='--inspect --trace-warnings' DEBUG=express:*,mongoose:* dotenvx run --env-file .env.development -- nodemon",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "preview": "pnpm run build && dotenvx run --env-file .env.production -- node dist/server.js",
    "start:dev": "pm2 start ecosystem.config.js --env development",
    "start:prod": "pm2 start ecosystem.config.js --env production",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier . --check",
    "format:fix": "prettier --write .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix",
      "npm run format:fix"
    ]
  },
