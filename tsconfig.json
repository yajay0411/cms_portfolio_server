{
  "compilerOptions": {
    /* Core */
    "target": "ES2020", // Modern JS for Node 18+ / 20+
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true, // Allow JSON imports (useful for config)
    "importHelpers": true, // Reduce duplication in compiled output
    "moduleResolution": "node", // Ensure module paths resolve correctly

    /* Strict type safety */
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,

    /* Path aliases (optional but recommended) */
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
